@model Products

<!doctype html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1">
    <link href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="~/css/site.css">
</head>
<body>
    <div class="py-3 py-md-5 bg-light">
        <div class="container">
            <div class="row">
                <div class="col-md-5 mt-3">
                    <div class="bg-white border">
                        <img src="@((string.IsNullOrEmpty(Model.ImageUrl)) ? "/Images/def123.jpg" : Model.ImageUrl) " class="w-100" alt="Img">
                    </div>
                </div>
                <div class="col-md-7 mt-3">
                    <div class="product-view">
                        <h4 class="product-name">
                            @Model.Title
                            <label class="label-stock bg-success">In Stock</label>
                        </h4>
                        <hr>
                        <p class="product-path">
                            Shop/@Model.category
                        </p>
                        <p class="product-path">
                            Raiting
                            @Model.TotalRating
                        </p>
                        <div>
                            <p>Category : @Model.category.Name</p>
                        </div>
                        <div>
                            <p>Brand : @Model.brand.Name</p>
                        </div>
                        <div>
                            <span class="price">$@Model.Price</span>
                        </div>
                        <div>
                            <p>Stock Quantity : @Model.StockQuantity</p>
                        </div>
                        <div class="mt-3" style="display:flex; flex-direction:row;">
                            <form asp-controller="Shop" asp-action="AddToCart" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn1">
                                    <i class="fa fa-shopping-cart"></i> Add To Cart
                                </button>
                            </form>
                            <form asp-controller="Shop" asp-action="AddFavorite" method="post">
                                <input type="hidden" asp-for="Id" />
                                <button type="submit" class="btn btn1">
                                    <i class="fa fa-heart"></i> Add To Wishlist 
                                </button>
                            </form>
                            <form asp-controller="Shop" asp-action="BuyProduct" method="post">
                                <input type="hidden" asp-for="Id"/>
                                <button type="submit" class="btn btn1"> 
                                    <i class="fab fa-cc-amazon-pay"></i> Buy 
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
            <div class="row">
                <div class="col-md-12 mt-3">
                    <div class="card">
                        <div class="card-header bg-white">
                            <h4>Description</h4>
                        </div>
                        <div class="card-body">
                            <p>
                                @Model.Description
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>