@model List<Products>

<link rel="stylesheet" href="~/css/site.css"/>
<div class="modal fade" id="myModal" tabindex="-1" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-lg">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="exampleModalLabel">Your Favorite Products</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @if (Model.Count == 0)
                {
                    <p>You have no favorite products yet.</p>
                }
                else
                {
                    <div class="table-responsive"> 
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Title</th>
                                    <th>Price</th>
                                    <th>Remove</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td><a href="@Url.Action("Info","Shop",new { id = product.Id})">@product.Title</a></td>
                                        <td>@product.Price</td>
                                        <td><button class="remove-button" data-product-id="@product.Id">X</button></td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                }
            </div>
            <div class="modal-overlay"></div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Close</button>
            </div>
        </div>
    </div>
</div>


<script>
    $(document).ready(function () {
        $(".plus-button").click(function () {
            var productId = $(this).data("product-id");
            var input = $("input[data-product-id='" + productId + "']");
            var currentValue = parseInt(input.val());
            input.val(currentValue + 1);
        });

        $(".minus-button").click(function () {
            var productId = $(this).data("product-id");
            var input = $("input[data-product-id='" + productId + "']");
            var currentValue = parseInt(input.val());
            if (currentValue > 1) {
                input.val(currentValue - 1);
            }
        });
    });
</script>
