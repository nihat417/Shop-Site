<nav>
    <div class="logo">
        <a asp-area="" asp-controller="Shop" asp-action="Index">Online Shop</a>
    </div>
    <input type="checkbox" id="click">
    <label for="click" class="menu-btn">
        <i class="fas fa-bars"></i>
    </label>
    <ul>
        <li><a><i class='fas fa-shopping-cart' style='color: white'></i></a></li>
        <li class="menu-item">
            <a><i class="fa fa-user" style='color: white' aria-hidden="true"></i></a>
            <ul class="submenu">
                <li><a style="font-size:1rem;">@User.Identity.Name</a></li>
                <li><a style="font-size:1rem;color: black;" asp-action="Logout" asp-controller="Account">Logout</a></li>
            </ul>
        </li>
        
    </ul>
</nav>

<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script>
    $(document).ready(function () {
        $('.menu-item').mouseenter(function () {
            $(this).addClass('active');
            $(this).find('.submenu').show();
        });

        $('.menu-item').mouseleave(function () {
            $(this).removeClass('active');
            $(this).find('.submenu').hide(); 
        });
    });

</script>


