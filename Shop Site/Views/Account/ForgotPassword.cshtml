@model string

<h2>Forgot Password</h2>

@if (!string.IsNullOrEmpty(Model))
{
    <p>Email sent with reset instructions</p>
}
else
{
    <form method="post">
        <label for="email">Email:</label>
        <input type="email" name="email" required />
        <button type="submit">Send Reset Email</button>
    </form>
}
