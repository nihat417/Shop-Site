@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <title>Forgot Password Confirmation</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            background-color: #f5f5f5;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
        }

        .header {
            text-align: center;
            margin-bottom: 20px;
        }

        .gmail-logo {
            max-width: 100px;
            display: block;
            margin: 0 auto;
        }

        .confirmation-text {
            text-align: center;
            margin-top: 20px;
        }

        .footer {
            text-align: center;
            margin-top: 20px;
        }
    </style>
</head>
<body>
    <div class="container">
        <div class="header">
            <a href="https://mail.google.com/">
                <img src="https://res.cloudinary.com/imagist/image/fetch/f_auto/q_auto/c_scale,w_2240/https://images.ctfassets.net/dm4oa8qtogq0/4dO3ShVlBlHC6eK4rDmJXc/3efb8a534b1ee58df306ba9b4959c509/Gmail.png?_a=ATCqVcY0" alt="Gmail Logo" class="gmail-logo">
            </a>

            <h2>Forgot Password Confirmation</h2>
        </div>
        <div class="confirmation-text">
            <p>An email with reset instructions has been sent to your email address.</p>
            <p>Click <a href="https://mail.google.com/">here</a> to open your Gmail inbox.</p>
        </div>
        <div class="footer">
            <p>&copy; 2023 Your Company. All rights reserved.</p>
        </div>
    </div>
</body>
</html>
