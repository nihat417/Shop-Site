@model RegisterViewModel

@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en" dir="ltr">
<head>
    <meta charset="utf-8">
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/reg.css" asp-append-version="true" />
</head>
<body>
    <div class="container">
        <div class="row">
            <div class="col-md-6 offset-md-3">
                <h2 class="text-center text-dark mt-5">Register Form</h2>
                <div class="card my-5">
                    <form asp-controller="Account" asp-action="Register" method="post" class="card-body cardbody-color p-lg-5">
                        <div class="text-center">
                            <img src="https://cdn.pixabay.com/photo/2016/03/31/19/56/avatar-1295397__340.png" class="img-fluid profile-image-pic img-thumbnail rounded-circle my-3"
                                 width="200px" alt="profile">
                        </div>
                        <div class="mb-3">
                            <input type="text" asp-for="FullName" class="form-control" id="Username" placeholder="Full Name">
                            <span asp-validation-for="FullName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="text" asp-for="UserName" class="form-control" id="Username" placeholder="User Name">
                            <span asp-validation-for="UserName"></span>
                        </div>
                        <div class="mb-3">
                            <input type="text" asp-for=Email class="form-control" id="Email" aria-describedby="emailHelp"
                                   placeholder="Email">
                            <span asp-validation-for="Email"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" asp-for=Password class="form-control" id="password" placeholder="password">
                            <span asp-validation-for="Password"></span>
                        </div>
                        <div class="mb-3">
                            <input type="password" asp-for=ConfirmPassword class="form-control" id="password" placeholder="Confirm  password">
                            <span asp-validation-for="ConfirmPassword"></span>
                        </div>
                        <div class="text-center"><button type="submit" class="btn btn-color px-5 mb-5 w-100">Login</button></div>
                        <div id="emailHelp" class="form-text text-center mb-5 text-dark">
                            Have an account? ? <a href="/Account/Login" class="text-dark fw-bold">
                                Log in
                            </a>
                        </div>
                        <div asp-validation-summary="All" class="text-danger"></div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>
</html>

<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>